{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Vagrant manifest",
	"type": "object",
	"properties": {
		"volume": {
			"type": "object",
			"properties": {
				"filesystem": {
					"type": "string",
					"enum": ["ext2", "ext3", "ext4", "xfs"]
				}
			},
			"required": ["filesystem"]
		},
                "vagrant": {
                        "type": "object",
                        "properties": {
                                "key.public": { "type": "string" }
                        }
                }
	},
	"required": ["volume","vagrant"]
}
